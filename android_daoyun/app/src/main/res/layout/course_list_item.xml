<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/course_list_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:layout_marginTop="2dp"
    android:layout_marginStart="5dp"
    android:layout_marginBottom="2dp"
    android:layout_marginEnd="5dp"
    android:background="@drawable/circle_bg"
    android:elevation="@dimen/elevation_midden">

    <TextView
        android:id="@+id/course_name_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/course_teacher_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@+id/course_name_TV"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/course_time_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@+id/course_teacher_TV"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        />
</RelativeLayout>