<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary"
        android:minHeight="?actionBarSize"
        app:navigationIcon="@drawable/ic_arrow_back_white_36dp"
        app:title="忘记密码"
        app:titleTextColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingStart="50dp"
        android:paddingEnd="30dp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimary"
            android:theme="@style/TextLabel_Primary">

            <EditText
                android:id="@+id/old_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_bg_edit"
                android:hint="请输入旧密码"
                android:inputType="textPassword"
                android:paddingBottom="2dp"
                android:textColor="@color/colorPrimary"
                android:textCursorDrawable="@drawable/bg_input_cursor"
                android:textSize="@dimen/input_text_size" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingStart="50dp"
        android:paddingEnd="30dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_new_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimary"
            android:theme="@style/TextLabel_Primary">

            <EditText
                android:id="@+id/new_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_bg_edit"
                android:hint="请输入新密码"
                android:inputType="textPassword"
                android:paddingBottom="2dp"
                android:textColor="@color/colorPrimary"
                android:textCursorDrawable="@drawable/bg_input_cursor"
                android:textSize="@dimen/input_text_size" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingStart="50dp"
        android:paddingEnd="30dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_repeat_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimary"
            android:theme="@style/TextLabel_Primary">

            <EditText
                android:id="@+id/repeat_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_bg_edit"
                android:hint="再次输入新密码"
                android:inputType="textPassword"
                android:paddingBottom="2dp"
                android:textColor="@color/colorPrimary"
                android:textCursorDrawable="@drawable/bg_input_cursor"
                android:textSize="@dimen/input_text_size" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <com.droidbond.loadingbutton.LoadingButton
        android:id="@+id/loading_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        custom:background="@drawable/bt_shape"
        custom:progressColor="@color/colorPrimary"
        custom:text="提交"
        custom:textColor="@color/colorPrimary"
        custom:textSize="18sp" />


</LinearLayout>